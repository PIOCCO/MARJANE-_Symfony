{% extends 'base.html.twig' %}

{% block title %}Payment Details{% endblock %}

{% block body %}
<h1>Payment Details</h1>

<ul>
    <li><strong>ID:</strong> {{ payment.id }}</li>
    <li><strong>Paid Date:</strong> {{ payment.paidDate ? payment.paidDate|date('Y-m-d H:i:s') : 'N/A' }}</li>
    <li><strong>Total:</strong> {{ payment.total ? payment.total|number_format(2) : 'N/A' }}</li>
    <li><strong>Details:</strong> {{ payment.details ?: 'N/A' }}</li>
</ul>
<a href="{{ path('payment_list') }}">Back to Payment List</a>
{% endblock %}
