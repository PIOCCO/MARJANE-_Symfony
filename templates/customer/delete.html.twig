{% extends 'base.html.twig' %}

{% block title %}Delete Customer{% endblock %}

{% block stylesheets %}
<style>
    .confirmation-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #dc3545;
        font-weight: bold;
    }

    p {
        font-size: 18px;
        color: #495057;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 30px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 30px;
        font-size: 16px;
        cursor: pointer;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="confirmation-container">
        <h1>Are you sure you want to delete this customer?</h1>
        <p>Name: {{ customer.Name }} With The ID: {{ customer.id }}</p>

        <form action="{{ path('customer_delete', {'id': customer.id}) }}" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn-danger">Yes, Delete</button>
        </form>

        <a href="{{ path('customer_index') }}">
            <button class="btn-secondary">Cancel</button>
        </a>
    </div>
</div>
{% endblock %}