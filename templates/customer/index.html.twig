{% block stylesheets %}
<style>
    /* General Styles */
    body {
        background-color: #f4f7fa;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        background-color: #ffffff;
        padding: 40px 50px;
        max-width: 1000px;
        margin: 50px auto;
        border-radius: 12px;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #2c3e50;
        font-size: 2.5rem;
        text-align: center;
        font-weight: bold;
        margin-bottom: 30px;
    }

    /* Search Bar */
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .search-container input {
        width: 70%;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 50px;
        border: 1px solid #bdc3c7;
        background-color: #ecf0f1;
        color: #7f8c8d;
        transition: 0.3s;
    }

    .search-container input:focus {
        outline: none;
        border-color: #3498db;
        box-shadow: 0px 0px 5px rgba(52, 152, 219, 0.5);
    }

    /* Card Styles */
    .customer-list-container {
        max-height: 450px;
        overflow-y: auto;
        padding: 10px;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #3498db;
        color: #ffffff;
        text-align: center;
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 0 0 10px 10px;
    }

    .info p {
        margin: 8px 0;
        font-size: 16px;
        color: #7f8c8d;
    }

    .btn-group {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn {
        padding: 12px 24px;
        font-size: 14px;
        border-radius: 50px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-warning {
        background-color: #f39c12;
        color: white;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
    }

    .btn-success {
        background-color: #2ecc71;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-warning:hover {
        background-color: #f1c40f;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-success:hover {
        background-color: #27ae60;
    }

    /* Add Button Styles */
    .add-button-container {
        text-align: center;
        margin-top: 40px;
    }

    .add-button-container .btn {
        padding: 14px 28px;
        font-size: 16px;
        border-radius: 50px;
        text-transform: uppercase;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .add-button-container .btn:hover {
        box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.1);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .search-container input {
            width: 85%;
        }

        .card-body {
            padding: 15px;
        }

        h1 {
            font-size: 2rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<!-- Container -->
<div class="container">
    <h1>Customer List</h1>

    <!-- Search Bar -->
    <form method="GET" action="{{ path('customer_index') }}" class="search-container">
        <input type="text" name="search" placeholder="Search for customers..." value="{{ search }}">
    </form>
    
    <!-- Scrollable Customer List -->
    <div class="customer-list-container">
        {% for customer in customers %}
        <div class="card">
            <div class="card-header">
               â€Ž
            </div>
            <div class="card-body">
                <div class="info">
                    <p><strong>Name:</strong> {{ customer.Name ?: 'N/A' }}</p>
                    <p><strong>Phone:</strong> {{ customer.phone ?: 'N/A' }}</p>
                    <p><strong>Email:</strong> {{ customer.email ?: 'N/A' }}</p>
                </div>
                <div class="btn-group">
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-info">View</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</a>
                    <a href="{{ path('account_create', {'id': customer.id}) }}" class="btn btn-success">Create Account</a>
                    <a href="{{ path('app_shopping_cart_index', {'id': customer.id}) }}" class="btn btn-success">Create Basket</a>
                    <a href="{{ path('order_create', {'id': customer.id}) }}" class="btn btn-success">Make a Order</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Add New Customer Button -->
    <div class="add-button-container">
        <a href="{{ path('customer_create') }}" class="btn btn-success">+ Add New Customer</a>
        <!-- View All Accounts Button -->
        <a href="{{ path('account_index') }}" class="btn btn-info">View All Accounts</a>
         <!-- View All Products Button -->
        <a href="{{ path('app_product_index') }}" class="btn btn-info">View All Products</a>
    </div>
</div>
{% endblock %}
