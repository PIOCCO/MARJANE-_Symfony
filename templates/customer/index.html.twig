{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
    h1 {
        color: #495057;
        font-weight: bold;
        text-align: center;
    }
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .search-container input {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 30px;
        outline: none;
        box-shadow: inset 0px 1px 3px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .search-container input:focus {
        border-color: #28a745;
        box-shadow: 0px 0px 8px rgba(40, 167, 69, 0.5);
    }
    .customer-list-container {
        max-height: 400px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 10px;
        background-color: #f8f9fa;
    }
    .card {
        margin-bottom: 20px;
        border: none;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.08);
    }
    .card-header {
        background-color: #343a40;
        color: #ffffff;
        font-weight: bold;
        border-radius: 12px 12px 0 0;
        text-align: center;
        font-size: 18px;
    }
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
    }
    .card-body .info {
        flex-grow: 1;
    }
    .info p {
        margin: 0;
        color: #6c757d;
        font-size: 16px;
    }
    .btn-group {
        display: flex;
        gap: 10px;
    }
    .btn {
        border: none;
        border-radius: 30px;
        font-size: 16px;
        padding: 10px 20px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-info {
        background-color: #17a2b8;
        color: white;
    }
    .btn-warning {
        background-color: #ffc107;
        color: white;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .btn-success {
        background-color: #28a745;
        color: white;
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
    }
    .btn-success:hover {
       background-color: #0056b3;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }
    .btn-view-accounts {
        background-color: #28a745;
        color: white;
        right:30px;
        font-size: 14px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
    }
    .btn-view-accounts:hover {
        background-color: #0056b3;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }
</style>
{% endblock %}

{% block body %}
<!-- Container -->
<div class="container mt-5">
   

    <h1 class="mb-4">Customer List</h1>

    <!-- Search Bar -->
    <form method="GET" action="{{ path('customer_index') }}" class="search-container mb-4">
        <input type="text" name="search" placeholder="Search for customers..." value="{{ search }}" class="form-control">
    </form>
    
    <!-- Scrollable Customer List -->
    <div class="customer-list-container">
        {% for customer in customers %}
        <div class="card">
            <div class="card-header">
                 â€Ž
            </div>
            <div class="card-body">
                <div class="info">
                    <p><strong>Name:</strong> {{ customer.Name ?: 'N/A' }}</p>
                    <p><strong>Phone:</strong> {{ customer.phone ?: 'N/A' }}</p>
                    <p><strong>Email:</strong> {{ customer.email ?: 'N/A' }}</p>
                </div>
                <div class="btn-group">
                    <a href="{{ path('customer_show', {'id': customer.id}) }}" class="btn btn-info">View</a>
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('customer_delete', {'id': customer.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</a>
                    <a href="{{ path('account_create', {'id': customer.id}) }}" class="btn btn-success">Create Account</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Add New Customer Button -->
    <div class="add-button-container text-center mt-4">
        <a href="{{ path('customer_create') }}" class="btn btn-success">+ Add New Customer</a>
     <!-- View All Accounts Button -->
        <a href="{{ path('account_index') }}" class="btn-view-accounts">View All Accounts</a>
    </div>
</div>
{% endblock %}