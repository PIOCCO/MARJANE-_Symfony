{% extends 'base.html.twig' %}

{% block title %}Customer Details{% endblock %}

{% block body %}
<div class="container mt-5 d-flex justify-content-center">
    <div class="content-box p-4">
        <h1 class="mb-4 text-center">Customer Details</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ customer.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{ customer.Name ?: 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>{{ customer.phone ?: 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ customer.email ?: 'N/A' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between flex-wrap">
            <a href="{{ path('customer_index') }}" class="btn btn-primary btn-lg" aria-label="Back to Customer List">Back to Customer List</a>
            <a href="{{ path('customer_edit', { id: customer.id }) }}" class="btn btn-warning btn-lg" aria-label="Edit Customer">Edit Customer</a>
            <form action="{{ path('customer_delete', { id: customer.id }) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this customer?')" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg" aria-label="Delete Customer">Delete Customer</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
    .content-box {
        background-color: #ffffff; /* White background */
        border-radius: 12px; /* Rounded corners */
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1); /* Shadow effect */
        max-width: 1500px; /* Limit the width */
        width: 100%; /* Make it responsive */
        padding: 20px; /* Add padding inside */
        border: 1px solid #e0e0e0; /* Optional border */
    }

    .btn {
        border-radius: 30px;
        padding: 12px 25px;
        font-size: 16px;
        text-transform: uppercase;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: white;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        transform: scale(1.05);
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
        transform: scale(1.05);
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

    .table th {
        background-color: transparent;
        color: #007b;
        text-align: center;
    }

    .table td {
        text-align: left;
        color: #495057;
    }

    .mt-4 {
        margin-top: 2rem;
    }

    .d-flex {
        display: flex;
        gap: 15px;
    }

    @media (max-width: 768px) {
        .d-flex {
            flex-direction: column;
        }
    }
</style>
{% endblock %}
