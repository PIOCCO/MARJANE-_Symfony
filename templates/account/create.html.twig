{% extends 'base.html.twig' %}

{% block title %}Create Account{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
    h1 {
        color: #495057;
        font-weight: bold;
        text-align: center;
    }
    .form-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    .btn {
        border: none;
        border-radius: 30px;
        font-size: 16px;
        padding: 10px 20px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-success {
        background-color: #28a745;
        color: white;
        font-size: 18px;
        font-weight: bold;
        padding: 15px 30px;
        border-radius: 40px;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        margin-top: 20px;
    }
    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
        box-shadow: 0px 4px 12px rgba(40, 167, 69, 0.4);
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Create New Account</h1>

    <!-- Account Creation Form -->
    <div class="form-container">
        {{ form_start(form) }}
            {{ form_row(form.accountName) }}
            {{ form_row(form.isClosed) }}
            {{ form_row(form.isVip) }}

            <div class="d-flex justify-content-between">
                <a href="{{ path('account_index') }}" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">Create Account</button>

            </div>


        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
