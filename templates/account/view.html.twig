{% extends 'base.html.twig' %}

{% block title %}Account Details{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
    h1 {
        color: #495057;
        font-weight: bold;
        text-align: center;
    }
    .details-container {
        margin-top: 20px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.08);
    }
    .details-container p {
        margin: 10px 0;
        font-size: 16px;
        color: #495057;
    }
    .details-container p strong {
        color: #343a40;
    }
    .btn-container {
        text-align: center;
        margin-top: 30px;
    }
    .btn {
        border: none;
        border-radius: 30px;
        font-size: 16px;
        padding: 10px 20px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-info {
        background-color: #17a2b8;
        color: white;
    }
    .btn-warning {
        background-color: #ffc107;
        color: white;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Account Details</h1>
    
    <div class="details-container">
        <p><strong>ID:</strong> {{ account.id }}</p>
        <p><strong>Account Name:</strong> {{ account.account_name }}</p>
        <p><strong>Opened on:</strong> {{ account.open_date }}</p>
        <p><strong>Status:</strong> {{ account.is_closed ? 'Closed' : 'Open' }}</p>
        <p><strong>Closed Date:</strong> {{ account.closed_date ?? 'N/A' }}</p>
        <p><strong>Type:</strong> {{ account.is_vip ? 'VIP' : 'Regular' }}</p>
    </div>

    <div class="btn-container">
        <a href="{{ path('account_edit', {'id': account.id}) }}" class="btn btn-warning">Edit</a>
        <a href="{{ path('account_delete', {'id': account.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this account?')">Delete</a>
        <a href="{{ path('account_index') }}" class="btn btn-info">Back to All Accounts</a>
    </div>
</div>
{% endblock %}
