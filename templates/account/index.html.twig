{% extends 'base.html.twig' %}

{% block title %}All Accounts{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }
    h1 {
        color: #495057;
        font-weight: bold;
        text-align: center;
    }
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }
    .search-container input {
        width: 50%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 30px;
        outline: none;
        box-shadow: inset 0px 1px 3px rgba(0, 0, 0, 0.1);
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .search-container input:focus {
        border-color: #28a745;
        box-shadow: 0px 0px 8px rgba(40, 167, 69, 0.5);
    }
    .account-list-container {
        max-height: 400px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 10px;
        background-color: #f8f9fa;
    }
    .card {
        margin-bottom: 20px;
        border: none;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.08);
    }
    .card-header {
        background-color: #343a40;
        color: #ffffff;
        font-weight: bold;
        border-radius: 12px 12px 0 0;
        text-align: center;
        font-size: 18px;
    }
    .card-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
    }
    .card-body .info {
        flex-grow: 1;
    }
    .info p {
        margin: 0;
        color: #6c757d;
        font-size: 16px;
    }
    .btn-group {
        display: flex;
        gap: 15px;
    }
    .btn {
        border: none;
        border-radius: 30px;
        font-size: 16px;
        padding: 10px 20px;
        text-decoration: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-info {
        background-color: #17a2b8;
        color: white;
    }
    .btn-warning {
        background-color: #ffc107;
        color: white;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
    }
    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }
    .btn-success {
        background-color: #28a745;
        color: white;
        font-size: 18px;
        font-weight: bold;
        padding: 15px 30px;
        border-radius: 40px;
        text-decoration: none;
        transition: all 0.3s ease;
        text-transform: uppercase;
        margin-top: 20px;
    }
    .btn-success:hover {
        background-color: #218838;
        transform: translateY(-2px);
        box-shadow: 0px 4px 12px rgba(40, 167, 69, 0.4);
    }
    .add-button-container {
        text-align: center;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">All Accounts</h1>

    <!-- Search Bar -->
    <form method="GET" action="{{ path('account_index') }}" class="search-container mb-4">
        <input type="text" name="search" placeholder="Search by account name" value="{{ app.request.get('search') }}" class="form-control">
    </form>

    <!-- Scrollable Account List -->
    <div class="account-list-container">
        {% if accounts is empty %}
            <p class="text-center text-muted">No accounts found.</p>
        {% else %}
            {% for account in accounts %}
            <div class="card">
                <div class="card-header">
                   â€Ž
                </div>
                <div class="card-body">
                    <div class="info">
                        <p><strong>Name:</strong> {{ account.accountName }}</p>
                        <p><strong>Opened on:</strong> {{ account.openDate|date('Y-m-d') }}</p>
                        <p><strong>Status:</strong> {{ account.isClosed ? 'Closed' : 'Open' }}</p>
                        <p><strong>Type:</strong> {{ account.isVip ? 'VIP' : 'Regular' }}</p>
                    </div>
                    <div class="btn-group">
                        <a href="{{ path('account_view', {'id': account.id}) }}" class="btn btn-info">View</a>
                        <a href="{{ path('account_edit', {'id': account.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('account_delete', {'id': account.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this account?')">Delete</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}