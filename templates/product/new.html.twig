{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-8 py-12 bg-white shadow-xl rounded-lg border border-gray-200">
    <h1 class="text-5xl font-bold text-center text-gray-800 mb-10">
        Create New Product
    </h1>

    <div class="bg-gray-100 p-8 rounded-lg shadow-xl">
        {{ include('product/_form.html.twig') }}
    </div>

    <div class="mt-8 text-center">
        <a href="{{ path('app_product_index') }}" class="inline-block text-white bg-blue-500 hover:bg-blue-600 px-6 py-3 rounded-full font-semibold text-lg transition-all duration-300 ease-in-out transform hover:scale-105">
            Back to Product List
        </a>
    </div>
</div>

<style>
    body {
        background-color: #f7f7f7;
        font-family: 'Inter', sans-serif;
    }

    h1 {
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
    }

    .bg-gray-100 {
        background-color: #f3f4f6;
    }

    .text-gray-800 {
        color: #333;
    }

    .bg-blue-500 {
        background-color: #3498db;
    }

    .bg-blue-600 {
        background-color: #2980b9;
    }

    .hover:bg-blue-600 {
        transition: background-color 0.3s ease-in-out;
    }

    .hover:scale-105 {
        transition: transform 0.2s ease-in-out;
    }

    .rounded-full {
        border-radius: 9999px;
    }

    .transition-all {
        transition: all 0.3s ease-in-out;
    }

    .shadow-xl {
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .text-white {
        color: white;
    }
</style>
{% endblock %}
