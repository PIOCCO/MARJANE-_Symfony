{% extends 'base.html.twig' %}

{% block title %}Create New Order{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f7fa;
        color: #333;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    header {
        background-color: #3498db;
        padding: 20px;
        color: white;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
    }

    .container {
        width: 80%;
        max-width: 900px;
        margin: 40px auto;
        background-color: white;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #3498db;
        margin-bottom: 20px;
        font-size: 2rem;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-size: 14px;
        font-weight: bold;
        color: #666;
        margin-bottom: 8px;
        display: inline-block;
    }

    input[type="text"], input[type="date"], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        color: #333;
        margin-top: 8px;
        box-sizing: border-box;
    }

    input[type="submit"], button {
        padding: 12px 20px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    input[type="submit"]:hover, button:hover {
        background-color: #2980b9;
    }

    .action-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }

    .back-link {
        color: #3498db;
        font-size: 16px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #2980b9;
    }

    .footer {
        text-align: center;
        padding: 20px;
        font-size: 14px;
        background-color: #ecf0f1;
        margin-top: 40px;
        color: #7f8c8d;
    }
</style>
{% endblock %}

{% block body %}
<header>
    New Order - Create
</header>

<div class="container">
    <h1>Create a New Order</h1>

    {{ include('order/_form.html.twig') }}

    <div class="action-links">
        <a href="{{ path('app_order_index') }}" class="back-link">‚Üê Back to Orders List</a>
    </div>
</div>

<div class="footer">
    <p>&copy; OUSSAM AND YOUSSEF ALL RIGHTS ARE RESERVED.</p>
</div>
{% endblock %}
